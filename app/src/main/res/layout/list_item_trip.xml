<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <CheckBox android:id="@+id/list_trip_complete"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:padding="4dp" />
    <TextView android:id="@+id/list_item_trip_vessel_name_text_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_toLeftOf="@id/list_trip_complete"
              android:textStyle="bold"
                android:textAllCaps="true"
              android:padding="4dp"
              tools:text="Vessel Name"
        />
    <TextView
        android:id="@+id/list_item_departure_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_trip_complete"
        android:layout_below="@id/list_item_trip_vessel_name_text_view"
        android:paddingLeft="25dp"
        tools:text="Departure Date"
        />
    <TextView
        android:id="@+id/list_item_arrival_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_trip_complete"
        android:layout_below="@id/list_item_departure_date_text_view"
        android:paddingLeft="25dp"
        tools:text="Arrival Date"
        />
</RelativeLayout>